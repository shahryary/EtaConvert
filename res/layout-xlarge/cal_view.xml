<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="left|right"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/screen"
        android:layout_width="800dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cursorVisible="false"
        android:editable="false"
        android:gravity="left"
        android:text=""
        android:textSize="40dp" >
    </EditText>

    <TextView
        android:id="@+id/textView"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text=""
        android:textSize="@dimen/txtSize" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="C"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="\u21D0"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonminplus"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="+/-"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button_art"
            android:onClick="ButtonClickHandler"
            android:text="x"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="7"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="8"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="9"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button_art"
            android:onClick="ButtonClickHandler"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="4"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="5"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="6"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button_art"
            android:onClick="ButtonClickHandler"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="1"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="2"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="3"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />
        <!--
        <Button
            android:id="@+id/buttonBra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="ButtonClickHandler"
            android:text="( )"
            android:textColor="#FF6400"
            android:textSize="24dp" />
        -->

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button_art"
            android:onClick="ButtonClickHandler"
            android:text="\u00F7"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="2"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="0"
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button"
            android:onClick="ButtonClickHandler"
            android:text="."
            android:textColor="@color/cal_text"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonExe"
            android:layout_width="0dp"
            android:layout_height="@dimen/buttonHeight_xlarge"
            android:layout_weight="1"
            android:background="@drawable/cal_button_art"
            android:onClick="ButtonClickHandler"
            android:text="\u003D"
            android:textColor="#FFffff"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>